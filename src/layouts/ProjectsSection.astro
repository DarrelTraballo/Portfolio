---
import { data } from "../data.js"

const projects = data.projects
---

<section id="projects" class="mb-12">
    <h2 class="text-2xl font-bold mb-4">Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-center items-stretch">
        {
            projects.map((project) => (
            <div class="bg-gray-800 shadow-md rounded-lg overflow-hidden flex flex-col">
                <img src={project.imageSrc} alt={project.title} class="w-full h-auto rounded-lg object-cover" />
                <!-- card contents -->
                <div class="p-4 flex flex-col flex-grow">
                    <h3 class="text-xl font-bold mb-2">{project.title}</h3>
                    <p class="text-sm text-gray-400 mb-2">
                        {
                            project.tech.map((tech, index) => (
                                <span>
                                    {tech}{index !== project.tech.length - 1 ? ',' : ''}
                                </span>
                            ))
                        }
                    </p>
                    <p class="text-gray-400 mb-4">{project.description}</p>
                    <p class="text-sm text-gray-500 mt-auto">{project.details}</p>
                </div>
            </div>
            ))
        }
    </div>
</section>
