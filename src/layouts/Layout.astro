---
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
import Constellations from "../components/background-effects/Constellations.jsx"

interface Props {
    title: string
}

const { title } = Astro.props

const isLocal = import.meta.env.MODE === "development"
const pageTitle = isLocal ? "[DEV] " + title : title
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body class="bg-primary-bg text-primary-font min-h-screen flex flex-col">
        <!-- <FallingBalls client:load /> -->
        <div class="fixed inset-0 -z-10 opacity-25 h-full">
            <Constellations client:load />
        </div>
        <div class="flex flex-col flex-grow">
            <Nav />
            <main class="container max-w-8xl mx-auto flex-grow px-20 py-8">
                <slot />
            </main>
        </div>
        <Footer />
        <style>
            body {
                font-family: "Roboto", sans-serif;
                min-height: 100vh;
            }
        </style>
    </body>
</html>
