---
import { data } from "../data.js"
const education = data.education
---

<section id="education" class="mb-12">
    <h2 class="text-2xl font-bold mb-4">Education</h2>
    <div class="flex">
        {
            education.map((education) => (
                <div class="bg-gray-800 rounded-lg py-6 px-12">
                    <h3 class="text-xl text-white font-bold">{education.title}</h3>
                    <p class="text-gray-400 mb-4">{education.major}</p>
                    <p class="text-gray-400">{education.institution}</p>
                    <p class="text-gray-400 text-sm">{education.location}</p>
                    <p class="text-gray-500 text-xs">{education.date}</p>
                </div>
            ))
        }
    </div>
</section>
