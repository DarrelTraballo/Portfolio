---
import Tag from "../components/Tag.jsx"
import ImageCard from "../components/ImageCard.jsx"
import { Icon } from "astro-iconify"

const socialLinks = [
    { name: "GitHub", icon: "mdi:github", url: "https://github.com/DarrelTraballo" },
    { name: "LinkedIn", icon: "mdi:linkedin", url: "https://www.linkedin.com/in/darrel-traballo" },
    { name: "Email", icon: "mdi:email", url: "mailto:darreltraballo1121@gmail.com" },
]

const isLocal = import.meta.env.MODE === "development"
const imageSrc = isLocal ? "/images/face/profile_pic.png" : "/images/face/grad-pic.JPG"
---

<section id="home" class="mb-12 mx-2">
    <div class="grid grid-cols-2 gap-10 bg-gradient-to-b from-secondary-bg rounded-lg px-14 py-4">
        <div class="">
            <h1 class="text-5xl pt-4 font-bold">Yo, I'm <br /> Darrel Traballo</h1>
            <div class="flex flex-wrap gap-2 pb-2">
                {
                    socialLinks.map(({ name, icon, url }) => (
                        <a
                            href={url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group flex items-center justify-center rounded-full py-2 text-primary-font transition-colors hover:text-tertiary-font"
                            aria-label={name}>
                            <Icon
                                name={icon}
                                class="w-4 h-4 text-primary-font transition-all group-hover:text-tertiary-font group-hover:scale-110 sm:h-8 sm:w-8 md:h-6 md:w-6"
                            />
                        </a>
                    ))
                }
            </div>
            <p class="text-justify text-base">
                I'm a <span id="age"></span> year old Game Developer who loves creating interactive experiences through code.
                I specialize in solving gameplay and technical challenges, especially by recreating game systems to sharpen
                my skills. Iâ€™m excited to apply my experience to projects that break new ground in gaming.
            </p>
            <div class="py-2 flex flex-wrap gap-2">
                <Tag name="Game Developer" />
                <Tag name="Unity" />
            </div>
        </div>
        <div class="text-center">
            <ImageCard imageSrc={imageSrc} altText={"Darrel Traballo"} />
        </div>
    </div>
</section>
<!-- <hr class="text-black" /> -->

<script>
    const dob = new Date("11/21/2002")
    var diff_ms = Date.now() - dob.getTime()
    var age = Math.abs(new Date(diff_ms).getUTCFullYear() - 1970)
    document.querySelector("#age").textContent = age.toString()
</script>
