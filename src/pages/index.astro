---
import Layout from "../layouts/Layout.astro"
import SkillsSection from "../layouts/SkillsSection.astro"
import ProjectsSection from "../layouts/ProjectsSection.astro"

const isLocal = import.meta.env.MODE === "development"
const pageTitle = isLocal
    ? "[LOCAL] Railee Darrel Traballo - Game Developer Portfolio"
    : "Railee Darrel Traballo - Game Developer Portfolio"

// links
const emailLink = "mailto:darreltraballo1121@gmail.com"
const linkedInLink = "https://www.linkedin.com/in/darrel-traballo"
---

<Layout title={pageTitle}>
    <!-- Header -->
    <div class="container mx-auto text-center">
        <h1 class="text-5xl px-8 py-4 font-bold">Railee Darrel Traballo</h1>
        <p class="text-lg pb-4">Game Developer</p>
    </div>

    <main class="container mx-auto px-20 py-8">
        <!-- About Me -->
        <section id="about" class="mb-12">
            <h2 class="text-2xl font-bold mb-4">About Me</h2>
            <p class="text-justify text-lg">
                Yo, I'm Darrel, and I'm a <span id="age"></span> year old game developer passionate about creating engaging
                and interactive experiences through code. I enjoy tackling both gameplay mechanics and technical challenges
                like algorithm development and recreating existing game mechanics, and I'm always excited to learn and improve!
            </p>
        </section>

        <!-- Skills -->
        <SkillsSection />

        <!-- Projects -->
        <ProjectsSection />

        <!-- Contact -->
        <section id="contact">
            <h2 class="text-2xl font-bold text-gray-100 mb-4">Contact</h2>
            <p class="text-gray-400">
                Feel free to reach out to me at <a href={emailLink} class="text-blue-400 hover:underline">
                    darreltraballo1121@gmail.com
                </a> or connect with me on <a
                    href={linkedInLink}
                    class="text-blue-400 hover:underline"
                    target="_blank"
                    rel="noopener noreferrer">
                    LinkedIn
                </a>
            </p>
        </section>
    </main>
</Layout>

<script>
    const dob = new Date("11/21/2002")
    var diff_ms = Date.now() - dob.getTime()
    var age = Math.abs(new Date(diff_ms).getUTCFullYear() - 1970)
    document.querySelector("#age").textContent = age.toString()
</script>
