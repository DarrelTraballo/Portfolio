---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar"

const currentPath = Astro.url.pathname
---

<header class="lg:flex px-20 py-5 gap-5">
    <Astronav>
        <div class="flex w-full justify-between">
            <div class="block lg:hidden">
                <MenuIcon class="w-4 h-4 text-secondary-text" />
            </div>
        </div>
        {
            currentPath === "/resume-generator" ? (
                <MenuItems class="hidden lg:flex">
                    <ul class="flex flex-col lg:flex-row lg:gap-5">
                        <li>
                            <a href="/" class="text-xl hover:text-gray-300">
                                Back to Home
                            </a>
                        </li>
                    </ul>
                </MenuItems>
            ) : (
                <MenuItems class="hidden lg:flex">
                    <ul class="flex flex-col lg:flex-row lg:gap-5">
                        <li>
                            <a href="#about" class="text-xl mx-4 hover:text-gray-300">
                                About
                            </a>
                        </li>
                        <li>
                            <a href="#projects" class="text-xl mx-4 hover:text-gray-300">
                                Projects
                            </a>
                        </li>
                        <li>
                            <a href="#contact" class="text-xl mx-4 hover:text-gray-300">
                                Contact
                            </a>
                        </li>
                    </ul>
                </MenuItems>
            )
        }
    </Astronav>
</header>
